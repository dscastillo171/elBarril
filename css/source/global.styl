@import 'jeet'

mobile = "(max-width: 767px)"
tablet = "(min-width: 768px) and (max-width: 1199px)"
desktop = "(min-width: 1200px)"

html
  height 100%
  font-family 'Raleway', sans-serif
  background-color #FFF

body
  height 100%
  margin 0
  text-align justify
  background-color #212C2F

p
  line-height 1.5
  font-size 16px
  color #333

.section
  width 100%

  & > div
    cf()
    max-width 1200px
    width 80%
    margin 0 auto

#Contact
  box-sizing border-box
  position fixed
  z-index 10
  background-color #d5b57f
  color #fff
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
  cursor pointer
  text-align center
  overflow hidden
  transition: all 0.5s ease

  @media mobile
    width 100px
    height 100px
    border-radius 50px
    bottom 20px
    right 20px

    i
      transition: all 0.5s ease
      font-size 50px
      line-height 100px

    span
      opacity 0

    &:hover
      box-shadow 0 8px 17px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19)
      width 106px
      height 106px
      border-radius 53px
      bottom 21px
      right 21px

      i
        font-size 53px
        line-height 106px

  @media tablet
    width 120px
    height 120px
    border-radius 60px
    bottom 20px
    right 20px
    white-space nowrap
    padding-left: 30px;

    i
      font-size 60px
      line-height 120px

    span
      opacity 0
      font-size 50px
      margin-left 8px

    &:hover
      width 440px
      padding-left 0

      span
        opacity 1.0

  @media desktop
    width 140px
    height 140px
    border-radius 70px
    bottom 40px
    right 40px
    white-space nowrap
    padding-left: 35px;

    i
      font-size 70px
      line-height 140px

    span
      opacity 0
      font-size 60px
      margin-left 10px

    &:hover
      width 520px
      padding-left 0

      span
        opacity 1.0

#A
  cf()
  box-sizing content-box
  height 100%
  background linear-gradient(rgba(0,0,0,.31), rgba(0,0,0,.31)), url(../img/inicio.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  color #FFF
  text-align center
  position relative

  @media desktop
    background-attachment fixed

  > div
    position relative
    top 50%
    margin-top -180px

  img
    @media mobile
      width 100%

    @media tablet
      height 320px

    @media desktop
      height 380px

  i
    position absolute
    bottom 0
    font-size 32px
    margin 0 0 10px

#B
  padding 100px 0

  h2
    font-size 38px
    margin-top 20px

  img
    margin-top: 30px;
    height 260px
    width 260px
    border-radius 130px

  > div
    & > div
      @media tablet
        column(1/2, gutter: 0.0)

      @media desktop
        column(1/3, gutter: 3.0)

    > div:nth-child(1)
      @media tablet
        box-sizing: border-box
        padding-right 10px;

    > div:nth-child(2)
      @media tablet
        box-sizing: border-box
        padding-left 10px;

    > div:nth-child(3)
      text-align center
      @media tablet
        display: none

#C
  background linear-gradient(rgba(0,0,0,.29), rgba(0,0,0,.29)), url(../img/disfrutar.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  color #FFF
  text-align center
  padding 160px 0

  @media desktop
    background-attachment fixed

  h1
    font-size 48px
    font-family 'Fjalla One', sans-serif

#D
  padding 90px 0

  > div
    & > div
      text-align center
      @media mobile
        margin-bottom 60px

      @media tablet
        margin-bottom 60px

      @media desktop
        column(1/3, gutter: 5.0)

      > div:nth-child(1)
        text-align center

        img
            display inline-block
            width 180px
            height 180px
            background-color #CCC
            border-radius 90px
            line-height 180px

      > div:nth-child(2)
        font-style italic
        color #555
        margin 25px 0

        p
          display inline

        i
          font-size 18px
          margin 0 5px
          color #D5B57F

      > div:nth-child(3)
        text-align right
        font-weight 600

#E
  padding 80px 0 90px
  background-color #212C2F
  color #FFF

  h2
    font-size 38px
    text-align center

  h3
    font-size 28px

  p
    color #F5F5F5
    @media mobile
      margin-bottom 40px

  i
    position relative
    color #D5B57F
    font-size 38px
    top 3px
    margin 0 10px 0 0

  > div
    > span
      position relative
      display inline-block
      width 140px
      height 3px
      background-color #D5B57F
      margin 5px 0 55px -70px
      left 50%

    > div
      > div
        @media tablet
          column(1/2)

        @media desktop
          column(1/2, gutter: 16.0)

#F
  margin 70px 0 90px

  h2
    font-size 38px
    text-align center
    margin-bottom 15px

  h4
    font-size 24px
    text-align center
    font-weight 200
    margin 10px 0 40px
    @media mobile
      margin-bottom 60px

  img
    margin 20px 0 0
    center(90%)

  span
    position relative
    display inline-block
    width 140px
    height 3px
    background-color #D5B57F
    margin 0 0 0 -70px
    left 50%

  > div
    > div
      > div
        text-align justified
        margin-top 50px

        @media tablet
          column(1/2, gutter: 0)

        @media desktop
          column(1/3, gutter: 5.0)

        > h3
          font-size 22px
          margin 10px 0

        > h3:nth-child(3)
          margin 40px 0 10px

        > p
          margin 0

      > div:nth-child(1)
        @media tablet
          box-sizing: border-box
          padding-right: 10px

      > div:nth-child(2)
        @media tablet
          box-sizing: border-box
          padding-left: 10px

      > div:nth-child(3)
        @media tablet
          column(1)

#G
  padding 80px 0 90px
  background-color #212C2F
  color #FFF

  h3
    font-size 22px
    @media desktop
      margin-top: 30px;

  p
    color #D5B57F
    @media mobile
      font-size 22px
      font-weight lighter
      letter-spacing 0.05em

    &.phone
      @media mobile
        font-size 28px
        font-weight normal

    @media tablet
      font-size 26px
      font-weight lighter
      letter-spacing 0.1em

    @media desktop
      font-size 21px
      font-weight lighter
      letter-spacing 0.1em

  > div
    > div
      @media mobile
        margin-bottom 60px

      @media tablet
        text-align: center
        margin-bottom 70px

      @media desktop
        column(1/3, gutter: 8.0)

    > div:nth-child(1)
      span
        display block

      span:nth-child(1)
        margin-top: 10px;
        font-size 38px
        font-weight 200

      span:nth-child(2)
        width 50px
        height 3px
        background-color #D5B57F
        margin 15px 0
        @media tablet
          margin 15px auto

