@import 'jeet'

html
  height 100%
  font-family 'Raleway', sans-serif
  background-color #FFF

body
  height 100%
  margin 0
  text-align justify
  min-width 992px
  background-color #212C2F

p
  line-height 1.5
  font-size 16px
  color #333

.section
  width 100%

  & > div
    cf()
    max-width 1200px
    width 80%
    margin 0 auto

#A
  cf()
  height 100%
  background linear-gradient(rgba(0,0,0,.31), rgba(0,0,0,.31)), url(../img/inicio.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  background-attachment fixed
  color #FFF
  text-align center
  position relative

  > div
    position relative
    top 50%
    margin-top -280px

  img
    height 320px
    margin-bottom 10px

  h1
    font-size 52px
    font-family 'Fjalla One', sans-serif

  h3
    font-size 28px
    letter-spacing 2px

  i
    position absolute
    bottom 0
    font-size 32px
    margin 0 0 10px

#B
  padding 115px 0

  h2
    font-size 38px
    margin-top -15px

  img
    height 260px
    width 260px
    border-radius 130px

  > div
    & > div
      column(1/3, gutter: 3.0)

    > div:nth-child(3)
      text-align center

#C
  background linear-gradient(rgba(0,0,0,.29), rgba(0,0,0,.29)), url(../img/disfrutar.jpg)
  background-repeat no-repeat
  background-size cover
  background-position center
  background-attachment fixed
  color #FFF
  text-align center
  padding 160px 0

  h1
    font-size 48px
    font-family 'Fjalla One', sans-serif

#D
  padding 110px 0

  > div
    & > div
      column(1/3, gutter: 5.0)
      text-align center

      > div:nth-child(1)
        text-align center

        img
            display inline-block
            width 180px
            height 180px
            background-color #CCC
            border-radius 90px
            line-height 180px

      > div:nth-child(2)
        font-style italic
        color #555
        margin 25px 0

        p
          display inline

        i
          font-size 18px
          margin 0 5px
          color #D5B57F

      > div:nth-child(3)
        text-align right
        font-weight 600

#E
  padding 80px 0 90px
  background-color #212C2F
  color #FFF

  h2
    font-size 38px
    text-align center

  h3
    font-size 28px

  p
    color #F5F5F5

  i
    position relative
    color #D5B57F
    font-size 38px
    top 3px
    margin 0 10px 0 0

  > div
    > span
      position relative
      display inline-block
      width 140px
      height 3px
      background-color #D5B57F
      margin 5px 0 55px -70px
      left 50%

    > div
      > div
        column(1/2, gutter: 16.0)

#F
  margin 70px 0 90px

  h2
    font-size 38px
    text-align center
    margin-bottom 15px

  h4
    font-size 24px
    text-align center
    font-weight 200
    margin 10px 0 40px

  img
    margin 20px 0 0
    center(90%)

  span
    position relative
    display inline-block
    width 140px
    height 3px
    background-color #D5B57F
    margin 0 0 0 -70px
    left 50%

  > div
    > div
      > div
        column(1/3, gutter: 5.0)
        text-align justified
        margin-top 50px

        > h3
          font-size 22px
          margin 10px 0

        > h3:nth-child(3)
          margin 40px 0 10px

        > p
          margin 0

#G
  padding 80px 0
  background-color #212C2F
  color #FFF

  h3
    font-size 22px

  p
    color #D5B57F

  > div
    > div
      column(1/3, gutter: 8.0)

    > div:nth-child(1)
      span
        display block

      span:nth-child(1)
        margin-top: 10px;
        font-size 38px
        font-weight 200

      span:nth-child(2)
        width 50px
        height 3px
        background-color #D5B57F
        margin 15px 0

